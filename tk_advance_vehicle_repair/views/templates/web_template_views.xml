<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Create New Booking request-->
    <template id="vehicle_booking_form" name="Vehicle Booking">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container py-4">
                        <t t-if="error">
                            <div class="alert alert-danger">
                                <strong>
                                    <span t-esc="error"/>
                                </strong>
                            </div>
                        </t>
                        <t t-if="website_slot_booking">
                            <div class="alert alert-warning alert-dismissible fade show d-none" id="alert" role="alert">
                                <strong>Tiempo no disponible</strong>
                            </div>
                        </t>
                        <h3 class="mb-2 text-center text-primary">
                            <span>
                                Solicitud de cita
                            </span>
                        </h3>
                        <form role="form" action="/create/vehicle-booking" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <h5 class="display-7 py-2 border-bottom border-primary text-primary">
                                <i class="fa fa-car me-1" aria-hidden="true">
                                </i>
                                Detalle de Vehículo
                            </h5>
                            <div class="row mt0 mb16">
                                <div class="col d-flex align-items-center">
                                    <div class="form-check active" id="new" style="margin-right: 1rem;">
                                        <input class="form-check-input" type="radio" name="vehicle_from"
                                               checked="checked" value="new"/>
                                        <label class="form-check-label">Nuevo</label>
                                    </div>
                                    <div class="form-check" id="customer_vehicle" style="margin-right: 1rem;">
                                        <input class="form-check-input" type="radio" name="vehicle_from"
                                               value="customer_vehicle"/>
                                        <label class="form-check-label">Vehículo de Cliente</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt8 mb8 d-none" id="from_customer_vehicle">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="register_vehicle_name">Vehículo registrado
                                        </span>
                                        <select name="register_vehicle_id" id="register_vehicle_id"
                                                class="form-control link-style">
                                            <option selected="selected" value="">Seleccionar vehículo</option>
                                            <t t-foreach="register_vehicles" t-as="register">
                                                <option t-att-value="register.id" t-esc="register.display_name"/>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                </div>
                            </div>

                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <label for="vehicle_brand_id" class="input-group-text">Vehículo
                                            <span class="required-details">*</span>
                                        </label>
                                        <select name="vehicle_brand_id" id="vehicle_brand_id"
                                                class="form-control link-style" required="required">
                                            <t t-foreach="vehicle_brands" t-as="vehicle">
                                                <option t-att-value="vehicle.id" t-esc="vehicle.name"/>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <label for="vehicle_model_id" class="input-group-text">Modelo
                                            <span class="required-details">*</span>
                                        </label>
                                        <select name="vehicle_model_id" id="vehicle_model_id"
                                                class="form-control link-style" required="required">
                                            <t t-foreach="vehicle_models" t-as="model">
                                                <option t-att-value="model.id" t-esc="model.name"/>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="vehicle_fuel_type">Tipo de Combustible
                                            <span class="required-details">*</span>
                                        </span>
                                        <select name="vehicle_fuel_type_id" id="vehicle_fuel_type_id"
                                                class="form-control link-style" required="required">
                                            <option selected="selected" value="">
                                            </option>
                                            <t t-foreach="vehicle_fuel_types" t-as="fuel">
                                                <option t-att-value="fuel.id" t-esc="fuel.name"/>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="v_no">VIN</span>
                                        <input type="text" class="form-control" id="vin_no" t-att-value="vin_no"
                                               placeholder="4S3BHB68B360" name="vin_no"/>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="reg_no">Placa
                                            <span class="required-details">*</span>
                                        </span>
                                        <input type="text" class="form-control" id="registration_no"
                                               placeholder="XX88 XY 8888" name="registration_no" required="required"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col-4">
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="transmission">
                                                    Tipo de Transmisión
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <div class="form-check">
                                                <input id="manual" class="form-check-input transmission_type"
                                                       type="radio" name="transmission_type" value="manual"/>Manual
                                            </div>
                                            <div class="form-check">
                                                <input id="automatic" class="form-check-input transmission_type"
                                                       type="radio" name="transmission_type" value="automatic"/>
                                                Automático
                                            </div>
                                            <div class="form-check">
                                                <input id="cvt" class="form-check-input transmission_type" type="radio"
                                                       name="transmission_type" value="cvt"/>CVT
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <h5 class="display-7 py-2 border-bottom border-primary text-primary">
                                <i class="fa fa-pencil-square-o me-1" aria-hidden="true">
                                </i>
                                Detalles de cita
                            </h5>
                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="booking_type">Tipo de Cita
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-9">
                                            <div class="form-check active" id="only_inspection">
                                                <input class="form-check-input" type="radio" name="booking_type"
                                                       value="only_inspection" checked="checked"/>Solo Inspección
                                            </div>
                                            <div class="form-check" id="only_repair">
                                                <input class="form-check-input" type="radio" name="booking_type"
                                                       value="only_repair"/>Solo Reparación
                                            </div>
                                            <div class="form-check" id="inspection_and_repair">
                                                <input class="form-check-input" type="radio" name="booking_type"
                                                       value="inspection_and_repair"/>Inspección + Reparación
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="booking_date_span">Fecha de cita</span>
                                        <input type="date" class="form-control" id="booking_date"
                                               t-att-value="booking_date" name="booking_date"/>
                                    </div>
                                </div>
                            </div>

                            <t t-if="website_slot_booking">
                                <div class="row mt8 mb8 d-none" id="booking_slot_main">
                                    <div class="col">
                                    </div>
                                    <div class="col">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="booking_slot">Horario de cita</span>
                                            <select name="booking_appointment_slot_id" id="booking_appointment_slot_id"
                                                    class="form-control link-style">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </t>

                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="input-group">
                                        <span class="input-group-text">Servicio requerido</span>
                                        <textarea class="form-control" aria-label="With textarea"
                                                  id="customer_observation" name="customer_observation"
                                                  t-att-value="customer_observation"/>
                                    </div>
                                </div>
                            </div>

                            <h5 class="display-7 py-2 border-bottom border-primary text-primary">
                                <i class="fa fa-user me-1" aria-hidden="true">
                                </i>
                                Detalle de cliente
                            </h5>
                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Solicitado por</span>
                                        <input type="text" class="form-control"
                                               t-att-value="request.env.user.partner_id.name" readonly="readonly"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="street">Calle</span>
                                        <input type="text" class="form-control" id="street" t-att-value="street"
                                               placeholder="Street" name="street"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Telf.</span>
                                        <input type="text" class="form-control"
                                               t-att-value="request.env.user.partner_id.phone" readonly="readonly"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="street2">Dirección</span>
                                        <input type="text" class="form-control" id="street2" name="street2"
                                               t-att-value="street2" placeholder="Street"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt8 mb8">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Email</span>
                                        <input type="text" class="form-control" readonly="readonly"
                                               t-att-value="request.env.user.partner_id.email"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col">
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="city">Ciudad</span>
                                                <input type="text" class="form-control" id="city" name="city"
                                                       placeholder="City" t-att-value="city"/>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="zip_cod">Zip</span>
                                                <input type="number" class="form-control" id="zip" name="zip"
                                                       t-att-value="zip"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt8 mb8">
                                <div class="col">

                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col">
                                            <div class="input-group mb-3">
                                                <label for="country_id" class="input-group-text">País</label>
                                                <select name="country_id" id="country_id" class="form-control">
                                                    <t t-foreach="customer_country" t-as="country">
                                                        <option t-att-value="country.id" t-esc="country.name"/>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="input-group mb-3">
                                                <label for="state_id" class="input-group-text">Estado</label>
                                                <select name="state_id" id="state_id" class="form-control">
                                                    <t t-foreach="customer_state" t-as="state">
                                                        <option t-att-value="state.id" t-esc="state.name"/>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!--Repair Request Created-->
    <template id="repair_order_created" name="Repair Request Created">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block">
                    <div class="container s_allow_columns">
                        <div class="row mt-5">
                            <div class="col-lg-12 col-xl-12 mr-lg-auto">
                                <span class="d-block fa fa-4x fa-thumbs-up mx-auto rounded-circle bg-primary">
                                </span>
                                <br/>
                                <h1 class="text-center">Gracias!</h1>
                                <div class="pb16 pt16 s_hr" data-snippet="s_hr"
                                     data-name="Separator">
                                    <hr class="mx-auto border-top w-50 border-dark text-center"/>
                                </div>
                                <h5 class="repair-order-success">
                                    <span class="fa fa-check-circle">
                                    </span>
                                    <span>
                                        Su solicitud de cita de vehículo para
                                        <br/>
                                        <a t-attf-href="/booking/request-information/#{booking_details.id}/">
                                            <strong>
                                                <t t-esc="booking_details.booking_number"/>
                                            </strong>
                                        </a>
                                        <br/>
                                        enviado exitosamente.
                                    </span>
                                </h5>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!--Inherit Template-->
    <template id="portal_vehicle_booking_request" inherit_id="portal.portal_my_home" name="My Portal">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/tk_advance_vehicle_repair/static/src/img/booking.png'"/>
                <t t-set="title">Solicitudes de citas de vehículos</t>
                <t t-set="url" t-value="'/booking/vehicle-booking-details'"/>
                <t t-set="text">Seguir, ver solicitudes de cita</t>
                <t t-set="placeholder_count" t-value="'count'"/>
            </t>
        </xpath>
    </template>

    <!--Breadcrumbs-->
    <template id="portal_adv_breadcrumbs" inherit_id="portal.portal_breadcrumbs"
              name="Portal Advance Vehicle Repair Breadcrumbs">
        <xpath position="inside" expr="//ol[hasclass('o_portal_submenu')]">
            <!--Booking Requests-->
            <li t-if="page_name == 'booking_request_tree'" class="breadcrumb-item">
                Solicitudes de cita
            </li>
            <li t-if="page_name == 'booking_request_form'" class="breadcrumb-item">
                <a t-att-href="'/booking/vehicle-booking-details'">
                    Solicitudes de cita
                </a>
            </li>
            <li t-if="page_name == 'booking_request_form'" class="breadcrumb-item">
                <t t-out="vehicle_bookings.booking_number"/>
            </li>
        </xpath>
    </template>

    <!--vehicle bookings tree view-->
    <template id="vehicle_booking_view" name="Vehicle Bookings">
        <t t-call="portal.portal_layout">
            <t t-if="not booking_requests">
                <div class="alert alert-info">
                    <strong>
                        <p>Actualmente no hay solicitudes para su cuenta.</p>
                    </strong>
                </div>
            </t>
            <t t-if="booking_requests" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Número de cita #</th>
                        <th class="text-center">Fecha de cita</th>
                        <th class="text-center">Marca</th>
                        <th class="text-center">Placa</th>
                        <th class="text-center">Tipo de cita</th>
                        <th class="text-center">Horario de cita</th>
                        <th class="text-center">Estatus</th>
                    </tr>
                </thead>
                <t t-foreach="booking_requests" t-as="req">
                    <tr>
                        <td>
                            <a t-attf-href="/booking/request-information/#{req.id}/">
                                <span t-field="req.booking_number"/>
                            </a>
                        </td>
                        <td class="text-center">
                            <span t-field="req.booking_date"/>
                        </td>
                        <td class="text-center">
                            <span t-field="req.vehicle_brand_id.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="req.registration_no"/>
                        </td>
                        <td class="text-center">
                            <span t-field="req.booking_type"/>
                        </td>
                        <td class="text-center">
                            <span t-field="req.booking_appointment_slot_id"/>
                        </td>
                        <td class="text-center">
                            <t t-if="req.booking_stages == 'draft'">
                                <span class="status-badge text-bg-info">
                                    Nuevo
                                </span>
                            </t>
                            <t t-if="req.booking_stages == 'vehicle_inspection'">
                                <span class="status-badge text-bg-warning">
                                    Inspección de Vehículo
                                </span>
                            </t>
                            <t t-if="req.booking_stages == 'vehicle_repair'">
                                <span class="status-badge text-bg-primary">
                                    Reparación de Vehículo
                                </span>
                            </t>
                            <t t-if="req.booking_stages == 'vehicle_inspection_repair'">
                                <span class="status-badge text-bg-success">
                                    Inspección + Reparación
                                </span>
                            </t>
                            <t t-if="req.booking_stages == 'cancel'">
                                <span class="status-badge text-bg-danger">
                                    Cancelado
                                </span>
                            </t>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <!--Vehicle Booking Details-->


    <template inherit_id="portal.portal_sidebar" id="vehicle_booking_details" name="Vehicle Booking Details">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-if="page_name == 'booking_request_form'">
                <div class="container bg-white mt-1">
                    <div class="row px-2 align-items-center mt-3">
                        <div class="col-md-12 col-sm-12">
                            <div class="row align-items-center">
                                <div class="col-md-12 col-sm-12 text-start d-flex gap-3 align-items-center justify-content-between">
                                    <h3 class="mb0">
                                        <span class="text-center text-primary"
                                              t-field="vehicle_bookings.booking_number"/>
                                    </h3>
                                    <div>
                                        <t t-if="vehicle_bookings.booking_stages">
                                            <span class="status-badge text-bg-secondary py-1"
                                                  t-if="vehicle_bookings.booking_stages == 'draft'">
                                                <span class="px-2">
                                                    Borrador
                                                </span>
                                            </span>
                                            <span class="status-badge text-bg-warning py-1"
                                                  t-if="vehicle_bookings.booking_stages == 'vehicle_inspection'">
                                                <span class="px-2">
                                                    Inspección de Vehículo
                                                </span>
                                            </span>
                                            <span class="status-badge text-bg-primary py-1"
                                                  t-if="vehicle_bookings.booking_stages == 'vehicle_repair'">
                                                <span class="px-2">
                                                    Reparación de Vehículo
                                                </span>
                                            </span>
                                            <span class="status-badge text-bg-success py-1"
                                                  t-if="vehicle_bookings.booking_stages == 'vehicle_inspection_repair'">
                                                <span class="px-2">
                                                    Inspección + Reparación
                                                </span>
                                            </span>
                                            <span class="status-badge text-bg-danger py-1"
                                                  t-if="vehicle_bookings.booking_stages == 'cancel'">
                                                <span class="px-2">
                                                    Cancelado
                                                </span>
                                            </span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="bgc-primary"/>
                    <div class="row p-2">
                        <div class="col-md-12 col-sm-12">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 mb-4">
                                    <div class="border-bottom border-primary mb-2 pb-2">
                                        <h5 class="d-inline text-primary">
                                            <i class="fa fa-car me-1" aria-hidden="true">
                                            </i>
                                            Detalles de Vehículo
                                        </h5>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12 c-field" t-if="vehicle_bookings.vehicle_from">
                                            <span class="c-label text-muted">Vehículo</span>
                                            <span class="c-value" t-field="vehicle_bookings.vehicle_from"/>
                                        </div>
                                        <div class="col-md-3 col-sm-12 c-field"
                                             t-if="vehicle_bookings.vehicle_brand_id">
                                            <span class="c-label text-muted">Marca</span>
                                            <span class="c-value" t-field="vehicle_bookings.vehicle_brand_id"/>
                                        </div>
                                        <div class="col-md-3 col-sm-12 c-field" t-if="vehicle_bookings.registration_no">
                                            <span class="c-label text-muted">Placa</span>
                                            <span class="c-value" t-field="vehicle_bookings.registration_no"/>
                                        </div>
                                        <div class="col-md-3 col-sm-12 c-field"
                                             t-if="vehicle_bookings.vehicle_fuel_type_id">
                                            <span class="c-label text-muted">Tipo de Combustible</span>
                                            <span class="c-value" t-field="vehicle_bookings.vehicle_fuel_type_id"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12 c-field" t-if="vehicle_bookings.booking_date">
                                            <span class="c-label text-muted">Fecha de cita</span>
                                            <span class="c-value" t-field="vehicle_bookings.booking_date"/>
                                        </div>
                                        <div class="col-md-3 col-sm-12 c-field"
                                             t-if="vehicle_bookings.vehicle_model_id">
                                            <span class="c-label text-muted">Modelo</span>
                                            <span class="c-value" t-field="vehicle_bookings.vehicle_model_id"/>
                                        </div>
                                        <div class="col-md-3 col-sm-12 c-field" t-if="vehicle_bookings.vin_no">
                                            <span class="c-label text-muted">VIN</span>
                                            <span class="c-value" t-field="vehicle_bookings.vin_no"/>
                                        </div>
                                        <div class="col-md-3 col-sm-12 c-field"
                                             t-if="vehicle_bookings.transmission_type">
                                            <span class="c-label text-muted">Tipo de transmisión</span>
                                            <span class="c-value" t-field="vehicle_bookings.transmission_type"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 mb-4">
                                    <div class="border-bottom border-primary mb-2 pb-2">
                                        <h5 class="d-inline text-primary">
                                            <i class="fa fa-user me-1" aria-hidden="true">
                                            </i>
                                            Detalles de cliente
                                        </h5>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12 c-field" t-if="vehicle_bookings.customer_id">
                                            <span class="c-label text-muted">Cliente</span>
                                            <span class="c-value" t-field="vehicle_bookings.customer_id"/>
                                        </div>
